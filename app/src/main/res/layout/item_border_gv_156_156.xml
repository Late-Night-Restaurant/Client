<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="16dp">
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/low_radius_border">
        <ImageView
            android:id="@+id/iv_gv_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_gv_today_menu"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="오늘의 메뉴"
            android:textColor="@color/Gray_02"
            android:textSize="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/tv_gv_main_menu"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="00전문점"
            android:textSize="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/Gray_05"
            android:layout_above="@id/tv_gv_title"/>
        <TextView
            android:id="@+id/tv_gv_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="이야기집 제목"
            android:textColor="@color/Gray_03"
            android:textSize="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>