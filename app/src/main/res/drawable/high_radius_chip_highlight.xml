<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/Primary_02" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"/>
            <corners android:bottomLeftRadius="999dp" android:bottomRightRadius="999dp" android:topLeftRadius="999dp" android:topRightRadius="999dp" />
        </shape>
    </item>

    <!-- 버튼이 안 눌렸을 때(디폴트) -->
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/Gray_08" />
            <corners android:bottomLeftRadius="999dp" android:bottomRightRadius="999dp" android:topLeftRadius="999dp" android:topRightRadius="999dp" />

        </shape>
    </item>

</selector>